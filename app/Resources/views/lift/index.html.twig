{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-7">
            <h2>
                Lift History
                <a href="#list-stuff-form" class="btn btn-md btn-success pull-right">
                    <span class="fa fa-plus"></span> Add
                </a>
            </h2>

            <table class="table table-striped js-rep-log-table">
                <thead>
                <tr>
                    <th>What</th>
                    <th>How many times?</th>
                    <th>Weight</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for repLog in repLogs %}
                    <tr data-weight="{{ repLog.totalWeightLifted }}"> {# je crée un nouvele attribut data-weight qui corresponde à la valeur "repLog.totalWeightLifted" #}
                        <td>{{ repLog.itemLabel|trans }}</td>
                        <td>{{ repLog.reps }}</td>
                        <td>{{ repLog.totalWeightLifted }}</td>
                        <td>
                            <a 
                                href="#" 
                                class="js-delete-rep-log"
                                data-url="{{ path('rep_log_delete', {id: repLog.id}) }}"
                            >
                                <span class="fa fa-trash"></span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Get liftin'!</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td>&nbsp;</td>
                        <th>Total</th>
                        <th class="js-total-weight">{{ totalWeight }}</th>
                        <td>&nbsp;</td>
                    </tr>
                </tfoot>
            </table>

            {{ include('lift/_form.html.twig') }}

        </div>
        <div class="col-md-5">
            <div class="leaderboard">
                <h2 class="text-center">
                    <img class="dumbbell" src="{{ asset('assets/images/dumbbell.png') }}" />
                    Leaderboard
                </h2>

                {{ include('lift/_leaderboard.html.twig') }}
            </div>
        </div>
    </div>
    
{% endblock %}
{% block javascripts %} 
    {{ parent() }}
    <script>
        $(document).ready(function() {
            console.log("ok");
            // $ désigne une variable qui est un objet jquery
            var $table = $('.js-rep-log-table');

            // $('.js-delete-rep-log').on('click', function() { 
            //     console.log('todo delete!');
            // });
            $table.find('.js-delete-rep-log').on('click', function(e) { 
                console.log('todo delete!');
                e.preventDefault(); // empêche le comportement par défaut du navigateur et annule le href du lien

                $(this).addClass('text-danger'); // this est équivalent à e.currentTarget et pointe l'élément DOM sur lequel l'action à lieu.
                $(this).find('.fa')
                        .removeClass('fa-trash') 
                        .addClass('fa-spinner') 
                        .addClass('fa-spin');

                var deleteUrl = $(this).data('url'); // .data() est un racourci pour lire l'attribut data
                var $row = $(this).closest('tr'); //.closest() retourne le premier ancètre qui est un tr
                var $totalWeightContainer = $table.find('.js-total-weight');
                var newWeight = $totalWeightContainer.html() - $row.data('weight');// the magic line
                //soustraction : la valeur de la classe totalWeightContainer - la valeur de l'attribut data weight de $row (tr)
                $.ajax({
                    url: deleteUrl, 
                    method: 'DELETE', 
                    success: function() {
                        $row.fadeOut();
                        $totalWeightContainer.html(newWeight);
                    }
                });
            });

            
            // $('.js-rep-log-table tbody tr').on('click', function(){
            //     console.log('tbody tr on click ok!');
            // })
            $table.find('tbody tr').on('click', function(){
                console.log('tbody tr on click ok!');
            });
        });
    </script>
{% endblock %}

